<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/shelveImg"
        android:layout_width="@dimen/shelve_bottom_sheet_item_image_size"
        android:layout_height="@dimen/shelve_bottom_sheet_item_image_size"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/shelve_bottom_sheet_item_margin"
        android:layout_marginLeft="@dimen/shelve_bottom_sheet_item_margin"
        android:background="@color/blue_light"/>

    <com.nunez.libellis.ui.views.CustomFontTextView
        android:id="@+id/shelveName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/shelve_bottom_sheet_item_margin"
        android:layout_marginStart="@dimen/shelve_bottom_sheet_item_margin"
        android:layout_marginRight="@dimen/shelve_bottom_sheet_item_margin"
        android:layout_marginEnd="@dimen/shelve_bottom_sheet_item_margin"
        android:textSize="@dimen/medium_text_size"
        app:fontFile="Raleway-Medium.ttf"
        tools:text="Currently Reading"/>
</LinearLayout>