<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.nunez.libellis.views.CustomFontTextView
        android:id="@+id/msgUpdateProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Murder on Orient Express"
        android:textSize="@dimen/small_text_size"
        app:fontFile="Raleway-Medium.ttf"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintLeft_toLeftOf="@+id/bookTitle"
        app:layout_constraintRight_toRightOf="@+id/bookTitle"
        app:layout_constraintTop_toBottomOf="@+id/bookTitle"/>

    <com.nunez.libellis.views.CustomFontTextView
        android:id="@+id/bookTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:text="Update progress on"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/big_text_size"
        app:fontFile="Raleway-Medium.ttf"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="@+id/guideline"
        app:layout_constraintRight_toLeftOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="@+id/guideline3"/>

    <com.nunez.libellis.views.CustomFontTextView
        android:id="@+id/bookAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Agatha Christie"
        android:textSize="@dimen/small_text_size"
        app:fontFile="Raleway-Medium.ttf"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/msgUpdateProgress"
        app:layout_constraintRight_toRightOf="@+id/msgUpdateProgress"
        app:layout_constraintTop_toBottomOf="@+id/msgUpdateProgress"
        app:layout_constraintVertical_bias="0.0"/>


    <com.nunez.libellis.views.CustomFontTextView
        android:id="@+id/updateMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="% or page"
        android:textColor="@color/grey_light"
        android:textSize="@dimen/medium_text_size"
        app:fontFile="Raleway-Medium.ttf"
        app:layout_constraintBottom_toBottomOf="@+id/percent"
        app:layout_constraintLeft_toRightOf="@+id/percent"
        app:layout_constraintRight_toLeftOf="@+id/pages"
        app:layout_constraintTop_toTopOf="@+id/guideline4"
        app:layout_constraintVertical_bias="0.45"/>

    <com.nunez.libellis.views.CustomFontTextView
        android:id="@+id/percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:gravity="bottom"
        android:text="25"
        android:textSize="60sp"
        app:fontFile="Lato-Light.ttf"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/updateMessage"
        app:layout_constraintTop_toTopOf="@+id/guideline4"/>

    <android.support.v7.widget.AppCompatSeekBar
        android:id="@+id/seekBar"
        style="@style/SeekBar"
        android:layout_width="0dp"
        android:layout_height="17dp"
        android:layout_marginTop="32dp"
        android:progress="25"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="@+id/guideline"
        app:layout_constraintRight_toLeftOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/updateMessage"/>

    <com.nunez.libellis.views.CustomFontTextView
        android:id="@+id/pages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:gravity="bottom"
        android:text="127"
        android:textSize="30sp"
        app:fontFile="Lato-Light.ttf"
        app:layout_constraintBottom_toBottomOf="@+id/percent"
        app:layout_constraintLeft_toRightOf="@+id/updateMessage"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline4"
        app:layout_constraintVertical_bias="0.533"/>

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp"
        />

    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp"
        tools:layout_editor_absoluteX="395dp"
        tools:layout_editor_absoluteY="0dp"/>

    <android.support.constraint.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="16dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp"/>

    <android.support.constraint.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="96dp"
        />

    <Button
        android:id="@+id/button2"
        style="@style/DialogButton"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:text="@string/reading_sheet_update_btn"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/button3"
        app:layout_constraintRight_toLeftOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="@+id/button3"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/button3"
        style="@style/DialogButton"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="33dp"
        android:text="@string/reading_sheet_cancel_btn"
        android:textColor="@color/colorPrimary"
        app:layout_constraintRight_toLeftOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/seekBar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0"/>

</android.support.constraint.ConstraintLayout>