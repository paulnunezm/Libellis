<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:seekBarStyle">@style/SeekBar</item>
    </style>

    <style name="AppTheme.BrandedLaunch" parent="AppTheme">
        <!--Splash screen-->
        <item name="android:windowBackground">@drawable/branded_launch_background</item>
    </style>

    <style name="IndeterminateProgressCircle">
        <!--<item name="android:indeterminateTintMode">src_in</item>-->
        <!--<item name="android:indeterminateTint">@color/blue</item>-->
        <item name="android:color">@color/blue</item>
    </style>

    <style name="LoginProgress" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="CustomProgressBar" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/custom_progress_bar</item>
        <item name="android:maxHeight">50dp</item>
        <item name="android:minHeight">10dp</item>
    </style>

    <style name="CircularProgress" parent="AppTheme">
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="UpdateBookTextView">
        <item name="android:clickable">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">start</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxWidth">@dimen/update_book_text_max_width</item>
        <item name="android:textColor">@color/grey_dark</item>
    </style>


    <style name="SeekBar" parent="Theme.AppCompat">
        <item name="android:progressTint">@color/colorPrimaryDark</item>
        <item name="android:thumbTint">@color/colorAccent</item>
    </style>

    <style name="DialogButton" parent="Theme.AppCompat">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">12dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="UpdateProgressDateMessageText">
        <item name="android:clickable">false</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:textColor">@color/grey_light</item>
        <item name="android:textSize">@dimen/micro_text_size</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="RatingViewStarsTheme" parent="AppTheme">
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="RatingViewStars">
        <item name="android:max">5</item>
        <item name="android:stepSize">1</item>
        <item name="android:numStars">5</item>
        <item name="android:scaleX">0.8</item>
        <item name="android:scaleY">0.8</item>
    </style>

    <style name="UpdateProgressButton">
        <item name="android:gravity">center</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="UpdateProgressEditText" parent="AppTheme">
        <item name="android:textColorHighlight">@color/colorPrimary</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">-8dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:inputType">number</item>
        <item name="android:minWidth">104sp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textSize">@dimen/enormous_text_size</item>
    </style>

    <style name="UpdateProgressComment" parent="AppTheme">
        <item name="android:textColorHighlight">@color/colorPrimary</item>
        <item name="android:inputType">textAutoComplete|textLongMessage|textMultiLine</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:maxLines">6</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:nestedScrollingEnabled">true</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="ProgressInputSymbol">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/grey_dark</item>
        <item name="android:textSize">@dimen/bigger_text_size</item>
    </style>

    <style name="ProgressInputMessage">
        <item name="android:layout_gravity">center</item>
        <item name="android:text">@string/progress_input_type_msg</item>
        <item name="android:textColor">@color/grey_light</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="ReadingRecycler">
        <item name="android:layout_marginStart">@dimen/books_recycler_margin</item>
        <item name="android:layout_marginEnd">@dimen/books_recycler_margin</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:elevation">6dp</item>
    </style>
</resources>
