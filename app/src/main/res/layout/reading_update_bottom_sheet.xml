<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:animateLayoutChanges="true">

    <include layout="@layout/update_progress_sheet_book_info"/>

    <com.nunez.libellis.views.RatingView
        android:id="@+id/ratingView"
        android:layout_width="wrap_content"
        android:layout_height="69dp"
        android:layout_marginTop="24dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="34dp"
        android:layout_gravity="end">

        <Button
            android:id="@+id/cancelButton"
            style="@style/DialogButton"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="@string/reading_sheet_cancel_btn"
            android:textColor="@color/blue_translucent"/>

        <Button
            android:id="@+id/updateButton"
            style="@style/DialogButton"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="@string/reading_sheet_update_btn"
            android:textColor="@color/colorPrimary"/>
    </LinearLayout>
</LinearLayout>