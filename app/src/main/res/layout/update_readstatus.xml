<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="0dp"
    android:layout_marginLeft="@dimen/card_margins"
    android:layout_marginRight="@dimen/card_margins"
    android:layout_marginTop="@dimen/card_margins"
    card_view:cardCornerRadius="@dimen/card_corner_radius"
    card_view:cardElevation="@dimen/card_elevation">

    <RelativeLayout
        android:id="@+id/upperLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingBottom="@dimen/card_child_TB_padding"
        android:paddingLeft="@dimen/card_child_LR_padding"
        android:paddingRight="@dimen/card_child_LR_padding"
        android:paddingTop="@dimen/card_child_TB_padding">

        <include
            android:id="@+id/updateUserLayout"
            layout="@layout/update_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/vertical_inset"/>

        <include
            layout="@layout/update_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/updateUserLayout"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>
