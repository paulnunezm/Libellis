<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:layout_margin="@dimen/card_margins"
    app:cardCornerRadius="@dimen/card_corner_radius">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="12dp">

        <ImageView
            android:id="@+id/shelveImg"
            android:layout_width="24dp"
            android:layout_height="24dp"
            tools:background="@color/blue_light"/>

        <com.nunez.libellis.ui.views.CustomFontTextView
            android:id="@+id/shelveName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:textSize="@dimen/medium_text_size"
            app:fontFile="Raleway-Medium.ttf"
            tools:text="Currently Reading"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
