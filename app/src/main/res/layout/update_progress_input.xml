<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    tools:parentTag="android.widget.LinearLayout">

    <LinearLayout
        android:id="@+id/progressLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.nunez.libellis.views.CustomFontTextView
                android:id="@+id/customFontTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Input type"
                android:textColor="@color/grey_light"
                android:textSize="@dimen/medium_text_size"
                app:fontFile="Raleway-Regular.ttf"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.nunez.libellis.views.CustomFontTextView
                    android:id="@+id/customFontTextView3"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="8dp"
                    android:gravity="center"
                    android:text="%"
                    android:textColor="@color/grey_dark"
                    android:textSize="32sp"
                    app:fontFile="Raleway-Regular.ttf"/>

                <View
                    android:id="@+id/view"
                    android:layout_width="2dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/blue"/>

                <com.nunez.libellis.views.CustomFontTextView
                    android:id="@+id/customFontTextView2"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:gravity="center"
                    android:text="#"
                    android:textColor="@color/grey_lighter"
                    android:textSize="32sp"
                    app:fontFile="Raleway-Regular.ttf"/>
            </LinearLayout>
        </LinearLayout>

        <com.nunez.libellis.views.CustomFontTextView
            android:id="@+id/input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="-18dp"
            android:text="52"
            android:textSize="72sp"
            app:fontFile="Lato-Light.ttf"/>
    </LinearLayout>
</merge>